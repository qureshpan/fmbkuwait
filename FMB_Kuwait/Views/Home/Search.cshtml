@model FMB_Kuwait.Models.TagDetail
@{
    ViewBag.Title = "AddTag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mx-auto mt-3">
    <div class="mx-auto bg-white rounded-lg overflow-hidden shadow-md">
        <div class="p-6">
            <!-- Form Title -->
            <h2 class="text-xl font-bold mb-4">Search Tag</h2>

            <!-- Form -->
            @using (Html.BeginForm("Seach", "Home", FormMethod.Post))
            {
                <form>
                    <!-- Text Input -->
                    <div class="flex flex-wrap -mx-2 mb-4">
                        <input type="hidden" name="MemberId" value="@Model.MemberId" />
                        <!-- Username Input -->
                        <div class="w-1/3 px-2 mb-4">
                            <label for="first_name" class="block text-sm font-medium text-gray-700">Tag Id</label>
                            <input type="text" id="tag.TagName" name="tag.TagName" class="border-blue-500 mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md px-3 py-2 focus:outline-none transition duration-150 ease-in-out" placeholder="Tag Id" required />
                        </div>

                    </div>
                    <div class="flex">
                        <button type="submit" class="py-2 px-4 border border-transparent text-sm font-medium rounded-md
                                text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2
                                focus:ring-offset-2 focus:ring-indigo-500">
                            Add
                        </button>
                        <button style="margin-left:1rem" type="button" class="py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">Cancel</button>
                    </div>
                </form>
            }
        </div>
    </div>
    <div class="mx-auto bg-white rounded-lg overflow-hidden shadow-md mt-4">
        <div class="p-6">
            <!-- Form Title -->
            <h2 class="text-xl font-bold mb-4">Tags</h2>
            <table class="table-auto">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th class="px-6 py-3">Id</th>
                        <th class="px-6 py-3" scope="col">
                            <span class="t">Delete</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-slate-800">
                    @foreach (var item in Model.tags)
                    {
                        <tr>
                            <td class="px-6 py-4">@item.TagName</td>
                            <td class="px-6 py-4">
                                <a href="/Home/DeleteTag/@item.TagName" class="px-6 py-4 font-medium text-blue-600 dark:text-blue-500
                                                       hover:underline">Delete<span class="t"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
